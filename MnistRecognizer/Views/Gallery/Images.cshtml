@model MnistRecognizer.Controllers.GalleryController.GalleryRequest
@{
    ViewData["Title"] = "Images";
}

<h1>Zarchiwizowane obrazy</h1>
@Html.ActionLink("< Powrót", "Index", "Gallery")
<style>
    img{
        padding: 20px;
    }
</style>
<table>
    <tbody>
        @for(int i = 0; i < Model.Names.Length / 10 + 1; i++)
        {
        <tr>
            @for(int j = 0; j < 10; j++)
            {
                var index = i * 10 + j;
                if (index >= Model.Names.Length)
                    break;
            <td>
                <img src="@Model.Names[index]" />
            </td>
            }
        </tr>
            
        }
    </tbody>
</table>
@Html.ActionLink("Pobierz zbiór danych", "ZipImages", "Gallery", new { type = Model.Type})


